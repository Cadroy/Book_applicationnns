<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.book_favorite">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/search_favorite_book"
        android:layout_width="365dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundcorner_pnk_tb"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Search"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookfavrecycle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_favorite_book" />
</androidx.constraintlayout.widget.ConstraintLayout>